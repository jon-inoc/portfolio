        @import url('https://fonts.googleapis.com/css2?family=Press+Start+2P&family=Roboto:wght@300;400;500;700&display=swap');
        
        :root {
            --primary: #6c5ce7;
            --secondary: #00cec9;
            --dark: #2d3436;
            --light: #f5f6fa;
        }
        
        body {
            font-family: 'Roboto', sans-serif;
            background-color: var(--dark);
            color: var(--light);
            overflow-x: hidden;
        }
        
        .pixel-font {
            font-family: 'Press Start 2P', cursive;
        }
        
        .hero-gradient {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
        }
        
        .project-card {
            transition: all 0.3s ease;
            transform-style: preserve-3d;
        }
        
        .project-card:hover {
            transform: translateY(-10px) rotateX(5deg);
            box-shadow: 0 20px 30px rgba(0, 0, 0, 0.3);
        }
        
        .skill-bar {
            height: 8px;
            border-radius: 4px;
            background: rgba(255, 255, 255, 0.1);
        }
        
        .skill-progress {
            height: 100%;
            border-radius: 4px;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            transition: width 1s ease-in-out;
        }
        
        .glow {
            animation: glow 2s infinite alternate;
        }
        
        @keyframes glow {
            from {
                box-shadow: 0 0 5px rgba(108, 92, 231, 0.5);
            }
            to {
                box-shadow: 0 0 20px rgba(108, 92, 231, 0.8);
            }
        }
        
        .pixel-corners {
            clip-path: polygon(
                0 10px, 10px 10px, 10px 0, 
                calc(100% - 10px) 0, calc(100% - 10px) 10px, 
                100% 10px, 100% calc(100% - 10px), 
                calc(100% - 10px) calc(100% - 10px), 
                calc(100% - 10px) 100%, 
                10px 100%, 10px calc(100% - 10px), 
                0 calc(100% - 10px)
            );
        }
        
        .gameboy-screen {
            background: #9bbc0f;
            box-shadow: inset 0 0 20px rgba(0, 0, 0, 0.5);
            border-radius: 5px;
        }
    </style>
